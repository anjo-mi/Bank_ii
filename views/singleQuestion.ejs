<div class="">
    <div class="">
        <ul class="flex flex-wrap gap-y-1 md:gap-y-3 p-2 m-auto border-1 border-dashed border-gray-400 rounded-sm gap-1 m-auto mt-5 sm:ml-18 md:m-auto md:mt-5 p-1 py-2 w-80/100 justify-end md:justify-evenly items-center text-center
        place-content-around">
            <% question.categories.forEach(cat => {%>
            <li class="w-3/10 max-w-4/10 min-w-fit">
                <form action="/questions/byCategory" method="POST"
                class="block m-auto">
                    <input type="hidden" name="categori" value="<%= cat%>">
                    <input  type="submit" value="<%= cat %>" class="block m-auto w-full bg-slate-700 hover:bg-slate-800 active:outline-1 active:outline-blue-400 p-1 rounded-lg border-1 border-gray-200 text-xs md:text-lg md:mt-0 lg:mt-0 text-sky-200 font-bold">
                </form>
            </li>
            <% })%>
        </ul>
    </div>
   
    <div class="w-95/100 m-auto mt-4 flex flex-col" id="answerContainer">
        <form id="answer-form" action="/answerQuestion" method="POST"
        class="flex flex-col lg:sticky lg:-top-12">
            <input type="hidden" id="questionId" name="questionId" value="<%= question._id %>">
            <input type="hidden" id="question" name="question" value="<%= JSON.stringify(question) %>">
             <div>
                <h2 class="font-bold underline text-sky-200 text:md md:text-2xl lg:text-xl mb-3">Question:</h2>
                <p class="m-auto text-center items-center min-h-50 py-1 md:py-3 px-2 md:px-4 font-bold border-1 border-violet-800 bg-zinc-900 rounded-lg text-lg md:text-xl lg:text-2xl"><%= question.content%></p>
            </div>
            <ul class="flex order-2 transition-all duration-400 gap-4 m-auto w-full h-12 lg:h-16 mt-3 mb-3 place-content-around text-center">
                <li class="m-auto px-2 py-1 h-full w-32/100 text-xs md:text-lg lg:text-xl outline-2 outline-grey-200 hover:outline-green-400 active:outline-green-800 rounded-full">
                    <button id="view-saved" type="button" class="view-saved m-auto h-full w-full items-center">View Previous Answer</button>
                </li>
                <li class="m-auto px-2 py-1 h-full w-32/100 text-xs md:text-lg lg:text-xl outline-2 outline-grey-200 hover:outline-green-400 active:outline-green-800 rounded-full">
                    <button id="submit-answer" type="submit" class="view-saved m-auto h-full w-full items-center">Submit Current Answer</button>
                </li>
                <li id="view-fb" class="view-fb m-auto px-2 py-1 h-full w-32/100 text-xs md:text-lg lg:text-xl outline-2 outline-grey-200 hover:outline-green-400 active:outline-green-800 rounded-full">
                    <button type="button" class="view-fb m-auto h-full w-full items-center">View Saved Feedback</button>
                </li>
            </ul>
            <textarea class="w-90/100 text-xs md:text-lg lg:text-lg order-3 h-25 mt-10 focus:mt-30 focus:h-140 lg:focus:h-80 transition-all duration-300 resize-none px-2 py-1 mx-auto mb-6 border-2 border-gray-700 outline-0 focus:outline-2 focus:outline-blue-600 focus:bg-slate-800 rounded-lg" name="answer" id="answer"></textarea>
        </form>
    </div>
</div>

<div id="saved-answer" class="saved-answer hidden w-80/100 flex-col gap-2 opacity-0 transition-opacity duration-300 ease-in-out left-1/2 top-1/2 -translate-x-1/2 justify-content-center items-center fixed z-1">
    <div class="saved-answer prev-answer-portion text-xs md:text-lg">
      <h2 class="saved-answer font-bold underline text-sky-200 text:md md:text-2xl lg:text-xl mb-3">Previously saved answer:</h2>
      <p class="saved-answer m-auto text-center items-center min-h-50 py-1 md:py-3 px-2 md:px-4 font-bold border-1 border-violet-800 bg-zinc-900 rounded-lg"><%= question.answer %></p>
    </div>
    <button id="dismiss" class="dismiss text-blue-800 bg-transparent border border-blue-800 hover:bg-blue-900 hover:text-white focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-lg text-xs px-3 py-1.5 text-center dark:hover:bg-blue-600 dark:border-blue-600 dark:text-blue-400 dark:hover:text-white dark:focus:ring-blue-800">Dismiss</button>
</div>

<div id="saved-feedback" class="saved-feedback m-auto mb-20 hidden h-fit w-80/100 flex-col gap-2 opacity-0 transition-opacity duration-300 ease-in-out justify-content-center items-center">
    <div class="saved-feedback prev-answer-portion text-xs md:text-lg">
      <h2 class="saved-feedback font-bold underline text-sky-200 text:md md:text-2xl lg:text-xl mb-3">Stored Feedback:</h2>
      <div class="saved-answer m-auto text-center items-center min-h-50 py-1 md:py-3 px-2 md:px-4 border-1 border-violet-800 bg-zinc-900 rounded-lg">
        <%- question.feedback %>
      </div>
    </div>
    <button id="dismiss-fb" class="dismiss-fb text-blue-800 bg-transparent border border-blue-800 hover:bg-blue-900 hover:text-white focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-lg text-xs px-3 py-1.5 text-center dark:hover:bg-blue-600 dark:border-blue-600 dark:text-blue-400 dark:hover:text-white dark:focus:ring-blue-800">Dismiss</button>
</div>

<script src="/singleQuestion.js"></script>