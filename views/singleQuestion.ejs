<div class="">
    <div class="">
        <ul class="flex gap-4 m-auto w-full place-content-around text-center">
        <% question.categories.forEach(cat => {%>
            <li class="bg-gray-200 text-xs md:text-md lg:text-lg mt-3 md:mt-0 lg:mt-0 text-blue-700 font-bold"><%= cat %></li>
        <% })%>
        </ul>
    </div>
    <div>
        <h2 class="font-bold underline text:md md:text-lg lg:text-xl mt-2 mb-3 md:mt-8 lg:mt-8">Question:</h2>
        <p class="m-auto font-bold text-lg md:text-xl lg:text-2xl"><%= question.content%></p>
    </div>
    <div class="w-95/100 m-auto mt-5 focus-within:z-5 fixed bottom-0 left-0 right-0 flex flex-col" id="answerContainer">
        <form action="/answerQuestion" method="POST"
        class="flex flex-col">
            <ul class="flex order-2 gap-4 m-auto w-8/10 mt-2 mb-3 place-content-around text-center">
                <li class="m-auto px-2 py-1 h-20 w-20 text-xs md:text-lg lg:text-xl outline-2 outline-grey-200 hover:outline-green-400 active:outline-green-800 rounded-full">
                    <button class="m-auto h-full w-full items-center">View Previous Answer</button>
                </li>
                <li class="m-auto px-2 py-1 h-20 w-20 text-xs md:text-lg lg:text-xl outline-2 outline-grey-200 hover:outline-green-400 active:outline-green-800 rounded-full">
                    <input class="m-auto inline-block h-full w-full items-center" type="submit" value="Submit&#13;&#10;Current&#13;&#10;Answer">
                </li>
                <li class="m-auto px-2 py-1 h-20 w-20 text-xs md:text-lg lg:text-xl outline-2 outline-grey-200 hover:outline-green-400 active:outline-green-800 rounded-full">
                    <button class="m-auto h-full w-full items-center">Record</button>
                </li>
            </ul>
            <textarea class="w-90/100 order-3 focus:order-1 h-15 focus:h-120 transition-all duration-300 resize-none px-2 py-1 mx-auto mb-6 border-2 border-gray-700 outline-0 focus:outline-2 focus:outline-blue-600 rounded-lg " name="answer" id="answer">
            </textarea>
        </form>
    </div>
</div>