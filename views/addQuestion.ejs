<div class="mx-auto w-full md:w-4/5 lg:w-2/3 flex flex-col place-content-evenly items-center h-svh min-h-fit">
  <div class="mx-auto w-full flex flex-col place-content-evenly h-fit min-h-9/10 border-1 border-blue-950 bg-gray-800 border-1 border-white rounded-2xl" id="question-creation-container">
    <h1 class="mx-auto flex-1 my-6 h-fit flex-1 text-gray-300 text-shadow-lg text-shadow-sky-500 text-4xl md:text-6xl">CREATE</h1>
    <form id="create-question-form" action="/questions/create" method="POST"
    class="flex-15 flex flex-col place-content-evenly gap-1.5">
      <div class="w-9/10 border-1 border-sky-400 bg-stone-900 rounded-2xl h-fit flex flex-col place-content-evenly items-center mx-auto my-3 py-2 px-1">
        <ul id="category-list" class="flex flex-wrap border-1 border-dashed mt-3 border-gray-400 bg-neutral-800 rounded-sm gap-3 m-auto p-1 py-2 w-95/100 justify-evenly items-center text-center">
        <% categori.forEach(cat => {%>
          <li class="min-w-3/10 text-xs md:text-md lg:-text-lg text-sky-200 font-bold">
            <label for="<%= cat  %>" class="flex gap-1 py-1 px-2 mr-auto place-content-evenly items-center bg-gray-700 hover:bg-cyan-950 hover:cursor-pointer rounded-lg border-1 border-blue-300">
              <input  type="checkbox" name="categori" id="<%= cat %>" value="<%= cat %>"
              class="w-4 h-4 md:w-6 md:h-6 accent-indigo-800 outline-1 outline-white">
            <%= cat %></label>
          </li>
        <% })%>
        </ul>
          <div class="w-2/3 mt-4 relative">
            <input type="text" id="new-category" placeholder="Add New Category" class="p-2 min-h-4 w-1/1 block text-center text-xs md:text-lg lg:text-lg bg-slate-950 border-1 border-gray-300 rounded-sm focus:outline-2 focus:outline-green-400">
            <button type="button" id="add-new-category" class="flex flex-col justify-center items-center w-6 h-6 md:w-8 h-full m-auto items-center p-1.5 text-lg text-center text-white bg-lime-600 rounded-lg focus:ring-2 focus:ring-green-950 hover:bg-lime-800 active:bg-lime-950 hover:font-bold text-shadow-md hover:text-shadow-sky-400 border-1 border-yellow-500 hover:border-yellow-700 active:border-yellow-900 hover:cursor-pointer absolute right-0 top-0">
               +
            </button>
          </div>
      </div>
      <button type="submit" id="submit" class="block max-h-fit w-4/10 mx-auto my-2 items-center px-5 py-2.5 text-xs md:text-lg text-center text-white border-1 border-yellow-600 hover:border-yellow-800 active:border-yellow-500 bg-green-950 hover:bg-green-700 active:bg-lime-700 hover:cursor-pointer rounded-lg hover:bg-green-800">
         Create Question
      </button>
      <div role="status" id="load-indicator" class="hidden m-auto mb-3">
       <svg aria-hidden="true" class="w-8 h-8 text-gray-200 animate-spin dark:text-gray-600 fill-green-400 m-auto" viewBox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z" fill="currentColor"/>
        <path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="currentFill"/>
       </svg>
       <span class="sr-only">Loading...</span>
      </div>
      <div>
        <label for="question" class="block m-auto mt-5 text-xs md:text-lg lg:text">Question:</label>
        <textarea class="w-90/100 text-xs md:text-lg lg:text-lg order-3 h-35 mt-2 focus:h-140 lg:focus:h-80 transition-all duration-300 resize-none px-2 py-1 mx-auto mb-6 border-2 border-violet-600 outline-0 focus:outline-2 focus:border-blue-600 bg-zinc-800 rounded-lg" name="question" id="question" required></textarea>
      </div>
      <div>
        <label for="answer" class="block m-auto mt-5 text-xs md:text-lg lg:text">Answer:</label>
        <textarea class="w-90/100 text-xs md:text-lg lg:text-lg order-3 h-35 mt-2 focus:h-140 lg:focus:h-80 transition-all duration-300 resize-none px-2 py-1 mx-auto mb-6 border-2 border-violet-600 outline-0 focus:outline-2 focus:border-blue-600 bg-zinc-800 rounded-lg" name="answer" id="answer"></textarea>
      </div>
      <input type="hidden" id="possible-new-categories" name="newCategories" value="">
    </form>
  </div>
</div>

<div id="error-message" class="hidden fixed z-1 top-0 left-0 w-full h-svh flex flex-col place-content-center opacity-0 transition-opacity duration-300 ease-in-out">
    <div class="m-auto py-6 px-3 h-1/2 w-9/10 w-4/5 md:w-3/4 lg:w-1/4 flex-col gap-2 bg-gray-700 border-1 border-red-600 bg-rose-950 rounded-xl justify-content-center items-center">
        <div class="m-auto h-full flex flex-col gap-3 place-content-between p-4 min-w-8/10 w-9/10 min-h-4/10 text-red-600 border border-white rounded-lg bg-gray-800" role="alert">
            <div class="flex flex-1 items-center">
                <svg class="shrink-0 w-6 h-6 me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
                </svg>
                <span class="sr-only">Info</span>
                <h3 class="text-lg font-medium border-b-2 border-b-red-700">Oh no!</h3>
            </div>
            <div id="message" class="message flex flex-3 min-w-9/10 text-center place-content-center items-center px-3 pt-2 pb-10 m-auto text-sm md:text-lg text-wrap text-gray-200 border-1 border-red-800 bg-slate-900 rounded-2xl"></div>
            <div class="flex">
                <button type="button" class="dismiss text-red-800 bg-transparent border-1 border-red-800 hover:bg-red-900 hover:text-white hover:cursor-pointer focus:ring-4 focus:ring-white font-medium rounded-lg text-xs px-3 py-1.5 text-center hover:bg-red-600 border-red-600 text-red-500" data-dismiss-target="#alert-additional-content-2" aria-label="Close">
                Dismiss
                </button>
            </div>
        </div>
    </div>
</div>

<div id="success-message" class="hidden fixed z-1 top-0 left-0 w-full h-svh flex flex-col place-content-center opacity-0 transition-opacity duration-300 ease-in-out">
    <div class="m-auto py-6 px-3 h-1/2 w-9/10 w-4/5 md:w-1/2 lg:w-1/4 flex-col gap-2 bg-gray-700 border-1 border-green-600 bg-lime-950 rounded-xl justify-content-center items-center">
        <div class="m-auto h-full flex flex-col gap-3 place-content-between p-4 min-w-8/10 w-9/10 min-h-4/10 text-emerald-600 border border-white rounded-lg bg-gray-800" role="alert">
            <div class="flex flex-1 items-center">
                <svg class="shrink-0 w-6 h-6 me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
                </svg>
                <span class="sr-only">Info</span>
                <h3 class="text-lg font-medium border-b-2 border-b-green-700">Hooray!</h3>
            </div>
            <div class="message flex flex-3 min-w-9/10 text-center place-content-center items-center px-3 pt-2 pb-10 m-auto text-sm md:text-lg text-wrap text-gray-200 border-1 border-green-800 bg-slate-900 rounded-2xl"></div>
            <div class="flex">
                <button type="button" class="dismiss text-green-800 bg-transparent border-1 border-green-800 hover:bg-green-900 hover:text-white hover:cursor-pointer focus:ring-4 focus:ring-white rounded-lg text-xs px-3 py-1.5 text-center hover:bg-green-600 border-green-600 text-green-500" data-dismiss-target="#alert-additional-content-2" aria-label="Close">
                Dismiss
                </button>
            </div>
        </div>
    </div>
</div>

<script src="../addQuestion.js"></script>