<!-- <h1 class="mx-auto w-80/100 md:w-70/100 lg:w-50/100 text-lg md:text-2xl lg:text:3xl mt-5 mb-5 text-center text-gray-400 underline bg-indigo-950" >Category Selection Pool</h1> -->

<div class="mx-auto w-full flex flex-col h-svh min-h-fit items-center place-content-center">
    <form action="/questions/byCategory" method="POST"
    class="w-95/100 md:w-4/5 lg:w-2/3 h-fit min-h-4/5 m-auto border-2 border-gray-400 bg-neutral-800 rounded-2xl">
    
        <div
        class="mx-auto w-full max-w-9/10 mt-5 mb-3">
            <ul
            class="m-auto flex p-4 place-content-evenly gap-3 md:gap-0 text-center w-full text-white">
                <li
                class="text-xs md:text-md lg:text-2xl w-1/2 md:w-4/10 h-12 md:h-15" >
                    <label for="matchAll"
                        class="flex items-center h-full w-full place-content-center text-xs md:text-xl lg:text-2xl text-gray-300 gap-3 hover:cursor-pointer border-1 border-sky-400 bg-gray-800 hover:bg-sky-900 rounded-2xl" >
                        <input type="radio" id="matchAll" name="matchAll" value="1"
                        class="w-4 h-4 accent-green-500 rounded-sm">
                        Match All
                    </label>
                </li>
                <li
                class="text-xs md:text-md lg:text-2xl w-1/2 md:w-4/10 h-12 md:h-15">
                    <label for="matchAny"
                        class="flex items-center h-full w-full place-content-center text-xs md:text-xl lg:text-2xl text-gray-300 gap-3 hover:cursor-pointer border-1 border-sky-400 bg-gray-800 hover:bg-sky-900 rounded-2xl">
                        <input type="radio" id="matchAny" name="matchAll" value="0"
                        class="w-4 h-4 accent-green-500 rounded-sm" >
                        Match Any
                    </label>
                </li>
            </ul>
        </div>
        <div class="m-auto flex place-content-center gap-5 w-full h-12 md:h-20 text-white py-2 px-5 rounded-full mt-2 md:mt-5">
            <input type="text" name="search" id="search-bar" placeholder="Search Specific Content"
            class="px-2 h-full text-center w-7/10 text-xs md:text-lg lg:text-lg border-1 border-gray-300 bg-zinc-900 focus:outline-2 focus:outline-green-400 rounded-lg">
        </div>
        <div class="flex items-center place-content-evenly my-5">
            <button type="button" id="select-all" class="block w-1/3 md:w-1/4 m-auto items-center px-3 py-2.5 text-xs md:text-base font-medium text-center text-white bg-lime-800 rounded-lg hover:bg-lime-950 active:bg-lime-600 hover:cursor-pointer border-1 border-yellow-400">
               Select All
               </button>
            <button type="reset" id="reset" class="block w-1/3 md:w-1/4 m-auto items-center px-2 md:px-3 py-2.5 text-xs md:text-base text-center text-white bg-rose-800 rounded-lg hover:bg-rose-950 active:bg-rose-600 hover:cursor-pointer border-1 border-yellow-400">
               Un-Select All
               </button>
        </div>
        <div
        class="mx-auto flex place-content-evenly max-w-9/10 mt-10 mb-2 text-center">
            <div class="w-1/3">
                <input type="submit" value="Get Questions"
                class="text-center text-xs md:text-lg block w-full h-full bg-indigo-800 active:bg-indigo-950 hover:bg-indigo-600 text-white py-2.5 px-2 rounded-full border-1 border-white hover:cursor-pointer hover:font-bold text-shadow-sky-400 hover:text-shadow-sm">
            </div>
            <div class="w-1/3">
                <input type="submit" formaction="/questions/getSingleRandom" value="Get Random"
                class="text-center text-xs md:text-lg block w-full h-full bg-indigo-800 active:bg-indigo-950 hover:bg-indigo-600 text-white py-1 px-2 rounded-full border-1 border-white hover:cursor-pointer hover:font-bold text-shadow-sky-400 hover:text-shadow-sm">
            </div>
        </div>
        <div
        class="mx-auto w-full mb-3 p-3">
            <ul
            class="m-auto flex flex-wrap gap-2 place-content-evenly items-center text-center h-fit w-full p-1 md:p-3 bg-zinc-900 border-2 border-stone-400 text-white rounded-3xl">
            <% allCats.forEach(cat =>{ %>
                <li
                class="m-auto my-1 md:my-2 h-fit min-h-full w-3/10 flex flex-col place-content-center items-center">
                <label for="<%= cat %>"
                class="py-2 px-3 flex flex-col items-center place-content-evenly text-xs md:text-lg lg:text-2xl h-full w-full min-h-20 md:min-h-30 text-white hover:bg-cyan-950 hover:cursor-pointer bg-emerald-600 border-2 border-cyan-400 rounded-3xl">
                    <input type="checkbox" id="<%= cat %>" name="categori" value="<%= cat %>"
                    class="h-3 w-3 md:h-5 md:w-5 checkbox accent-indigo-800 break-normal">
                    <%= cat %>
                </label>
                </li>
            <% }) %>
            </ul>
        </div>
    
    </form>
</div>

<script src="../index.js"></script>