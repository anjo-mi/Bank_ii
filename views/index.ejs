<h1 class="mx-auto w-80/100 md:w-70/100 lg:w-50/100 text-lg md:text-lg lg:text:3xl mt-5 mb-5 text-center text-gray-400 underline bg-indigo-950" >Select Categories Pool</h1>

<form action="/questions/byCategory" method="POST">
    
    <div 
    class="mx-auto w-full max-w-9/10 mt-5 mb-3">
        <ul 
        class="m-auto flex place-content-center gap-10 text-center w-full text-gray-900 bg-white border border-gray-200 rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-white">
            <li 
            class="text-xs md:text-md lg:text-2xl
            w-full border-b border-gray-200 sm:border-b-0 sm:border-r dark:border-gray-600" >
                <label for="matchAll"
                    class="text-xs md:text-md lg:text-2xl h-full w-full py-3 ms-2 text-gray-900 dark:text-gray-300" >
                    <input type="radio" id="matchAll" name="matchAll" value="1"
                    class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded-sm focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500">
                    Match All
                </label>
            </li>
            <li 
            class="text-xs md:text-md lg:text-2xl w-full border-b border-gray-200 sm:border-b-0 sm:border-r dark:border-gray-600">
                <label for="matchAny"
                class="text-xs md:text-md lg:text-2xl h-full w-full py-3 ms-2 text-gray-900 dark:text-gray-300">
                    <input type="radio" id="matchAny" name="matchAll" value="0"
                    class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded-sm focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500" >
                    Match Any
                </label>
            </li>
        </ul>
    </div>
    <div 
    class="mx-auto w-full max-w-9/10 mt-5 mb-3 p-3 dark:bg-gray-700 dark:border-gray-200 dark:text-white">
        <ul 
        class="m-auto grid grid-cols-3 gap-4 text-center">
        <% allCats.forEach(cat =>{ %>
            <li 
            class="max-h-100 flex flex-col place-content-center gap-2 items-center border border-gray-200 rounded-sm dark:border-gray-200">
            <label for="<%= cat.description%>"
            class="text-xs mb-2 md:text-md lg:text-2xl h-full w-full text-gray-900 dark:text-gray-300">
                <input type="checkbox" id="<%= cat.description%>" name="categori" value="<%= cat.description%>" 
                class="text-blue-600 mt-2 bg-gray-100 border-gray-300 rounded-sm focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
                <p><%= cat.description%></p>
            </label>
            </li>
        <% }) %>
        </ul>
    </div>

    <div 
    class="mx-auto w-full max-w-9/10 text-center">
        <input type="submit" value="Get Questions"
        class="text-center bg-gray-400 active:bg-green-800 hover:bg-green-400 focus:outline-4 focus:outline-offset-2 focus:outline-green-700 text-white font-bold py-2 px-4 rounded-full">
    </div>
</form>