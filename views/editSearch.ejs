<form action="/questions/byCategory" method="POST">
      <div class="m-auto flex place-content-center gap-5 w-full h-20 text-white py-2 px-5 rounded-full mt-5">
        <input type="text" name="search" id="search-bar" placeholder="Search Specific Content"
        class="px-2 h-full text-center w-7/10 text-xs md:text-lg lg:text-lg border-1 border-gray-300 focus:outline-2 focus:outline-green-400">
        <!-- <button class="p-2 text-xs md:text-lg lg:text-lg w-2/10 border-1 border-gray-300 bg-orange-700 rounded-lg" id="search-btn">Search</button> -->
    </div>
    <div 
    class="mx-auto w-full max-w-9/10 mt-5 mb-3 p-3 dark:bg-gray-700 dark:border-gray-200 dark:text-white">
        <ul 
        class="m-auto grid grid-cols-3 gap-4 items-center text-center">
        <% allCats.forEach(cat =>{ %>
            <li 
            class="max-h-100 h-15 flex flex-col place-content-center gap-2 items-center border border-gray-200 rounded-sm dark:border-gray-200">
            <label for="<%= cat.description%>"
            class="text-xs md:text-xl lg:text-2xl mb-2 md:text-md lg:text-2xl h-full w-full text-gray-900 dark:text-gray-300">
                <input type="checkbox" id="<%= cat.description%>" name="categori" value="<%= cat.description%>" 
                class="text-blue-600 mt-2 bg-gray-100 border-gray-300 rounded-sm focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
                <p><%= cat.description%></p>
            </label>
            </li>
        <% }) %>
        </ul>
    </div>

    <div 
    class="mx-auto w-full max-w-9/10 text-center">
        <input type="submit" value="Get Questions"
        class="text-center bg-gray-400 active:bg-green-800 hover:bg-green-400 focus:outline-4 focus:outline-offset-2 focus:outline-green-700 text-white font-bold py-2 px-4 rounded-full">
    </div>
</form>

<div class="mx-auto w-full max-w-9/10 mt-5 mb-3">
    <ul class="m-auto mt-5 border-solid border-black-500 grid grid-cols-3 gap-4 text-center">
    <% allQuestions.forEach(question =>{ %>
        <li class="question-list-item opacity-0 transition-opacity ease-in-out duration-300 rounded-md p-2 h-fit w-full flex flex-col place-content-center gap-2 items-center col-span-3 border-solid border-2 border-black-700">
            <ul class="flex m-auto border-b-1 border-dashed w-full max-w-10/10 place-content-around text-center">
                <% question.categories.forEach(cat =>{ %>
                <li class="max-w-4/10 min-w-2/10 w-3/10">
                  <button  type="submit" value="<%= cat %>" class="category-quick-search bg-slate-700 p-2 w-full rounded-lg border-1 border-gray-200 text-xs md:text-lg lg:text-lg md:mt-0 lg:mt-0 text-sky-200 font-bold"><%= cat%></button>
                </li>
                <% })%>
            </ul>
        <form action="/questions/edit" method="POST">
            <p class="question-content text-sm md:text-lg lg:text-2xl row-span-2 col-span-5"><%= question.content%></p>
            <div class="m-auto text-center">
                <input type="hidden" name="questionId" id="questionId" value="<%= question._id %>">
                <input type="submit" class="text-center bg-green-400 active:bg-green-950 hover:bg-green-600 focus:outline-4 focus:outline-offset-2 focus:outline-green-700 text-white font-bold py-1 px-5 rounded-full" value="Edit">
            </div>
        </form>
        </li>
    <% }) %>
    </ul>
    <div id="noResultsBox" class="no-results-box opacity-0 transition-opacity ease-in-out duration-300 mx-auto border-1 border-gray-400 flex items-center h-fit w-full text-center py-1 pb-5 px-5">
        <p
        class="m-auto text-lg md:text-xl lg:text-xl text-center text-orange-800 h-full w-full">
        No questions matched your search. Try again.
        </p>
    </div>
</div>

<script src="../../editSearch.js"></script>