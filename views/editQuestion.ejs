<div id="error-message" class="hidden w-80/100 m-auto mb-5 text-red-400 text-center p-2 bg-gray-600 border-1 border-gray-200 rounded-lg "></div>

<div id="success-message" class="hidden w-80/100 m-auto mb-5 text-green-400 text-center p-2 bg-gray-600 border-1 border-gray-200 rounded-lg "></div>

<div class="w-95/100 m-auto mt-4 flex flex-col" id="edit-question-container">
  <form id="edit-question-form" action="/questions/edit/update" method="POST"
  class="flex flex-col lg:sticky lg:-top-12">
    <ul id="category-list" class="flex flex-wrap border-1 border-dashed border-gray-400 rounded-sm gap-3 m-auto mt-5 ml-18 p-1 py-2 w-80/100 justify-end justify-evenly items-center text-center">
        <% categori.forEach(cat => {%>
          <li class="bg-slate-700 p-1 min-w-3/10 rounded-lg border-1 border-gray-200 text-xs md:text-lg lg:text-lg text-sky-200 font-bold">
            <label for="<%= cat.description %>" class="w-full h-full">
              <input  type="checkbox" name="categori" value="<%= cat %>" checked="true" 
              class="w-full h-full text-blue-600 mt-2 bg-gray-100 border-gray-300 rounded-sm focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
            <%= cat %></label>
          </li>
        <% })%>
        <li class="min-w:4/10 max-w-7/10"><input type="text" id="new-category" placeholder="Add New Category" class="p-2 min-h-4 block text-center text-xs md:text-lg lg:text-lg border-1 border-gray-300 focus:outline-2 focus:outline-green-400"></li>
    </ul>
    <button type="submit" id="add-new-category" class="block w-4/10 m-auto mt-3 items-center px-5 py-2.5 text-sm font-medium text-center text-white bg-green-400 rounded-lg focus:ring-2 focus:ring-green-950 hover:bg-green-800">
       Add Category
   </button>
    <div class="mt-5">
        <button type="button" id="delete-btn" class="delete-question-btn text-center bg-red-400 active:bg-red-950 hover:bg-red-600 focus:outline-2 focus:outline-offset-2 focus:outline-red-700 text-white font-bold py-1 px-5 rounded-full"">Delete</button>
    </div>
    <div>
      <label for="question" class="block m-auto mt-5 text-xs md:text-lg lg:text">Question:</label>
      <textarea class="w-90/100 text-xs md:text-lg lg:text-lg order-3 h-25 mt-2 focus:mt-5 focus:h-140 lg:focus:h-80 transition-all duration-300 resize-none px-2 py-1 mx-auto mb-6 border-2 border-gray-700 outline-0 focus:outline-2 focus:outline-blue-600 focus:bg-slate-800 rounded-lg" name="question" id="question" required><%= question.content%></textarea>
    </div>
    <div>
      <label for="answer" class="block m-auto mt-5 text-xs md:text-lg lg:text">Answer:</label>
      <textarea class="w-90/100 text-xs md:text-lg lg:text-lg order-3 h-25 mt-2 focus:mt-5 focus:h-140 lg:focus:h-80 transition-all duration-300 resize-none px-2 py-1 mx-auto mb-6 border-2 border-gray-700 outline-0 focus:outline-2 focus:outline-blue-600 focus:bg-slate-800 rounded-lg" name="answer" id="answer"><%= question.answer || ''%></textarea>
    </div>
    <input type="hidden" id="possible-new-categories" name="newCategories" value="">
    <div role="status" id="load-indicator" class="hidden m-auto mb-3">
     <svg aria-hidden="true" class="w-8 h-8 text-gray-200 animate-spin dark:text-gray-600 fill-green-400 m-auto" viewBox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z" fill="currentColor"/>
      <path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="currentFill"/>
     </svg>
     <span class="sr-only">Loading...</span>
    </div>
    <input type="hidden" name="questionId" id="questionId" value="<%= question._id%>">
    <button type="submit" id="submit" class="block w-4/10 m-auto items-center px-5 py-2.5 text-sm font-medium text-center text-white bg-green-400 rounded-lg focus:ring-2 focus:ring-green-950 hover:bg-green-800">
       Update Question
   </button>
  </form>
</div>

<script src="../../editQuestion.js"></script>